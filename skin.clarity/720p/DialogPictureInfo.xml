						<height>3</height>
						<texture>separatio_FS.png</texture>
					</control>
					<control type="image"> <!--BOTTOM-->
						<description>BOTTOM bar</description>
						<top>565</top>
						<width>1220</width>
						<height>3</height>
						<texture>separatio_FS.png</texture>
					</control>
					<!--**************************************************************************-->
				</control>
