							<left>0</left>
							<top>0</top>
							<width>224</width>
							<height>15</height>
							<font>font_17_B</font>
							<textcolor>$VAR[BreadCrumbFontColor]</textcolor> <!--GREY-->
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[VideoPlayer.Title] ($INFO[VideoPlayer.Year])</label>
