					<!---->
					<animation type="WindowOpen" condition="!Window.IsActive(34)" reversible="false">
						<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="450" />
						<effect type="fade" start="0" end="100" time="300" />
					</animation>
					<animation type="WindowClose" condition="!Window.IsActive(34)" reversible="false">
						<effect type="zoom" start="100" end="50" center="640,360" easing="in" tween="back" time="200" />
						<effect type="fade" start="100" end="0" time="250" />
					</animation>
